{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "outDir": "dist",
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "types": [
        "jasmine",
        "webpack",
        "source-map",
        "uglifyjs",
        "core-js",
        "node",
        "socket.io-client"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useWebpackText": true
    },
    "compileOnSave": false,
    "buildOnSave": false
}